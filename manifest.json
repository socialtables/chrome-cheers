{
  "manifest_version": 2,

  "name": "Cheers",
  "description": "Cheers from your browser - without searching your email.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "<all_urls>",
    "tabs"
  ]
}